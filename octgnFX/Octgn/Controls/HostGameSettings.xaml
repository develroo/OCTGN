<UserControl x:Class="Octgn.Controls.HostGameSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:Octgn.Controls"
             xmlns:lib="clr-namespace:Octgn.Library;assembly=Octgn.Library"
             xmlns:vm="clr-namespace:Octgn.ViewModels"
             xmlns:ctrl="clr-namespace:Octgn.Controls"
             xmlns:toggleSwitch="clr-namespace:ToggleSwitch;assembly=ToggleSwitch"
             mc:Ignorable="d"
             Panel.ZIndex="5" Height="Auto">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBox}" BasedOn="{x:Null}">
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type PasswordBox}" BasedOn="{x:Null}">
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{x:Null}">
        </Style>
        <Style TargetType="{x:Type CheckBox}" BasedOn="{x:Null}">
        </Style>
        <Style TargetType="{x:Type ComboBox}" BasedOn="{x:Null}" >

        </Style>
    </UserControl.Resources>
    <Border
        x:Name="BorderHostGame"
        Width="320"
        Visibility="Visible"
        Style="{StaticResource Panel}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" RenderingBias="Quality" ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <Border Height="35"
                    VerticalAlignment="Top" BorderThickness="0,0,0,1" BorderBrush="#FFEEEEEE">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FF7A2828" Offset="0.657"/>
                        <GradientStop Color="#FFA73737"/>
                        <GradientStop Color="#FF7A2828" Offset="0.994"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid Margin="5">
                <Grid.RowDefinitions >
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85"></ColumnDefinition>
                    <ColumnDefinition Width="100*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="19" HorizontalAlignment="Center"
                           Margin="0,-3,0,0" FontWeight="Bold" Foreground="#FFFFFFFF">Start A Game</TextBlock>
                <Label Grid.Row="1" Grid.ColumnSpan="2" Foreground="Firebrick"
                       VerticalContentAlignment="Center" Height="20"
                       Content="{Binding RelativeSource={RelativeSource AncestorType={x:Type ctrl:HostGameSettings}}, Path=Error, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <toggleSwitch:HorizontalToggleSwitch
                    x:Name="HostOnlineSlider"
                    Width="224" Margin="0,0,-1,0"
                    Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                    UncheckedBackground="{Binding RelativeSource={RelativeSource Self}, Path=CheckedBackground}"
                    UncheckedForeground="{Binding RelativeSource={RelativeSource Self}, Path=CheckedForeground}"
                >
                    <toggleSwitch:HorizontalToggleSwitch.CheckedContent>
                        <TextBlock Text="Host Game Online" TextWrapping="Wrap"/>
                    </toggleSwitch:HorizontalToggleSwitch.CheckedContent>
                    <toggleSwitch:HorizontalToggleSwitch.UncheckedContent>
                        <TextBlock Text="Host Game on LAN" TextWrapping="Wrap"/>
                    </toggleSwitch:HorizontalToggleSwitch.UncheckedContent>
                </toggleSwitch:HorizontalToggleSwitch>
                <Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right">Username</Label>
                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="48*"/>
                        <ColumnDefinition Width="125*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TextBoxUserName" Grid.ColumnSpan="3"/>
                    <Button x:Name="ButtonRandomizeUserName" Grid.Column="2" Click="ButtonRandomizeUserNameClick">
                        <Image Source="/OCTGN;component/Resources/randomname.png" Stretch="None"></Image>
                    </Button>
                </Grid>
                <Label Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right">Game Name</Label>
                <Grid Grid.Row="6" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TextBoxGameName" Grid.ColumnSpan="2"/>
                    <Button x:Name="ButtonRandomizeGameName" Grid.Column="1" Click="ButtonRandomizeGameNameClick">
                        <Image Source="/OCTGN;component/Resources/randomname.png" Stretch="None"></Image>
                    </Button>
                </Grid>
                <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right">
                    <TextBlock FontWeight="Bold" Foreground="Red" Style="{x:Null}" VerticalAlignment="Center">$</TextBlock>
                    <Border Width="3"></Border>
                    <Label VerticalAlignment="Center">Password</Label>
                </StackPanel>
                <PasswordBox Grid.Row="8" Grid.Column="1" x:Name="PasswordGame" IsEnabled="False"></PasswordBox>
                <Label Grid.Row="10" Grid.Column="0" HorizontalAlignment="Right">Game</Label>
                <ComboBox Grid.Row="10" Grid.Column="1" x:Name="ComboBoxGame" ItemsSource="{Binding Games, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:HostGameSettings}}}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:DataGameViewModel}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Path=IconUri}" Stretch="Uniform" Height="32" Width="32" RenderOptions.BitmapScalingMode="HighQuality"/>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="{Binding Path=Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Path=Version}" FontStyle="Italic" FontSize="10"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem" BasedOn="{x:Null}">

                        </Style>
                        <Style TargetType="TextBlock" BasedOn="{x:Null}">

                        </Style>
                    </ComboBox.Resources>
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                            <GradientStop Color="#FFEEEEEE" Offset="1"/>
                        </LinearGradientBrush>
                    </ComboBox.Background>
                </ComboBox>
                <Button Grid.Row="15" Grid.Column="1" Width="101" HorizontalAlignment="Right" Click="ButtonCancelClick" Content="Cancel" Margin="0,10,0,0" Grid.ColumnSpan="2"></Button>
                <Button
                    Grid.Row="15" Grid.Column="0"
                    Width="101" HorizontalAlignment="Left"
                    Click="ButtonHostGameStartClick" Content="Start"
                    Margin="0,10,0,0" Grid.ColumnSpan="2"
                    BorderBrush="#FF038800"
                >
                    <Button.Resources>
                        <Storyboard x:Key="GlowButton" RepeatBehavior="Forever">
                            <DoubleAnimation
                                From="10" To="20"
                                Storyboard.TargetProperty="(Effect).BlurRadius"
                                Duration="00:00:01.500"
                                AutoReverse="True"
                            />
                            <ColorAnimation
                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                To="#FFABE4AA"
                                Duration="00:00:01.500"
                                AutoReverse="True"
                            />
                        </Storyboard>
                    </Button.Resources>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource GlowButton}"/>
                        </EventTrigger>
                    </Button.Triggers>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="#FF04AE00" BlurRadius="10" Opacity=".5"/>
                    </Button.Effect>
                </Button>

                <ProgressBar Grid.Row="13" Grid.ColumnSpan="2" x:Name="ProgressBar" Height="20" VerticalAlignment="Bottom" IsIndeterminate="false" Style="{x:Null}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
